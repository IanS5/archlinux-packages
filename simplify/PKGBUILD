pkgname=simplify
pkgver=0.1.5
pkgrel=1
pkgdesc=""
arch=(any)
url=""
license=('MIT')
groups=('base')
depends=('bash' 'inotify-tools')
source=("git+https://github.com/IanS5/simplify.git")

build() {
		cd simplify
		mkdir -p build
		cd build
		cmake ..
		make
}

package() {
    cd simplify
	install -Dm775 build/simplify $pkgdir/usr/bin/simplify
}

md5sums=('SKIP')
