pkgname=gitwatch
pkgver=0.0.2
pkgrel=1
pkgdesc="gRPC/protobuf based server and client for watching git hosting web hooks"
arch=(any)
url=""
license=('MIT')
makedepends=('go' 'make')
source=("git+https://github.com/IanS5/gitwatch.git")

build() {
    cd "$pkgname"
    go get github.com/golang/protobuf/...
    go get google.golang.org/grpc
    go get github.com/google/go-github/...
    go get golang.org/x/net/...
    make build
}
package() {
    cd "$pkgname"
    install -Dm775 gitwatch "$pkdir"/usr/bin/gitwatch
}
md5sums=('SKIP')
